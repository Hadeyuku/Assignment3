<% if @book.errors.any? %>
	<div class="alert alert-warning">
		<%= @book.errors.count %>errors prohibited this book from being saved:<br>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
  				<li><%= message %></li>
			<% end %>
			</ul>
	</div>
<% end %>
<h2>User info</h2>
<div class="row">
	<%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
</div>
<div class="row">
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
</div>
<div class="row">
	<%= link_to "", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>
<div class="row">
	<h1>New book</h1>
</div>
<div class="row">
	<%= form_for(book) do |f| %>
		<div class="field row">
			<p>Title</p>
			<%= f.text_field :title, class: "col-xs-12" %>
		</div>
		<div class="field row">
			<p>Opinion</p>
			<%= f.text_area :body, class: "col-xs-12" %>
		</div>
		<div class="actions row">
			<th><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></th>
		</div>
	<% end %>
</div>