<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<div class="row">
				<%= render 'books/list', book: @book_new, user: @user %>
			</div>
		</div>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
						<% if @book.user == current_user %>
						  <th></th>
						  <th></th>
						 <% end %>
					</tr>
				</thead>
				<tbody>
					<tr>
			 			<td>
			 				<%= link_to user_path(@book.user) do %>
			 					<%=attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
			 					<br><%= @user.name %>
			 				<% end %>
			 			</td>
						<td>
							<%= @book.title %>
						</td>
						<td>
							<%= @book.body %>
						</td>
						<% if @book.user == current_user %>
							<td>
								<%= link_to "Edit", edit_book_path(@book.id), class:"btn-sm btn-success" %>
							</td>
							<td>
								<%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>